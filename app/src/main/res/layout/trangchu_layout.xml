<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightwhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">

                        <RelativeLayout
                            android:id="@+id/layout_displayhome_ThongKe"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:elevation="8dp"
                            android:layout_margin="10dp"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_calendar_today_24"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="33dp"
                            android:layout_margin="10dp"
                            android:gravity="center_horizontal"
                            android:text="Doanh thu"
                            android:textAlignment="center"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">

                        <RelativeLayout
                            android:id="@+id/layout_displayhome_XemBan"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:elevation="8dp"
                            android:layout_margin="10dp"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_baseline_airline_seat_legroom_normal_24"
                                android:layout_centerInParent="true" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:text="Bàn ăn"
                            android:textColor="@color/black"
                            android:layout_margin="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">

                        <RelativeLayout
                            android:id="@+id/layout_displayhome_XemMenu"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:elevation="8dp"
                            android:layout_margin="10dp"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_baseline_add_circle_24" />
                        </RelativeLayout>

                        <TextView
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:text="Thêm loại món ăn"
                            android:textColor="@color/black"
                            android:layout_margin="10dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_nhanvien"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginRight="5dp">

                        <RelativeLayout
                            android:id="@+id/layout_displayhome_XemNV"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:elevation="8dp"
                            android:layout_margin="10dp"
                            android:background="@color/colorPrimary">

                            <ImageView
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_baseline_account_circle_24" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/tv_nhanvien"
                            android:layout_width="65dp"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:gravity="center_horizontal"
                            android:text="Thông tin nhân viên"
                            android:textColor="@color/black"
                            android:layout_margin="10dp" />
                    </LinearLayout>


                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="200dp"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/logo"
                    android:layout_height="200dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/muli_black"
                        android:text="Danh sách loại món ăn"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_displayhome_ViewAllCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="Xem tất cả >" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_displayhome_LoaiMon"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:clipToPadding="false" />


            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@color/grey"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:fontFamily="@font/muli_black"
                        android:text="thống kê doanh thu"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/txt_displayhome_ViewAllStatistic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xem tất cả >"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_displayhome_DonTrongNgay"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:clipToPadding="false" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</layout>

